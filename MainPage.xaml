<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test1.MainPage">
    <Grid>
        <!-- รูปภาพพื้นหลัง -->
        <Image Source="background.jpg"
               Aspect="AspectFill"
               Opacity="1" />

        <!-- เนื้อหาด้านบน -->
        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">
                <Image
                    x:Name="fortuneImage"
                    Source="tarot.png"
                    HeightRequest="500"
                    Aspect="AspectFit"
                    SemanticProperties.Description="ภาพการ์ดทำนายโชค"
                    Margin="0,50,0,0" />

                <Frame
                    BackgroundColor="WhiteSmoke"
                    CornerRadius="15"
                    Padding="0"
                    Opacity="0.8"
                    HorizontalOptions="Center">
                    <Label
                        x:Name="resultLabel"
                        Text="กดปุ่มเพื่อทำนายโชคของคุณ"
                        FontSize="24"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="Black"
                        Padding="10,5,5,10" />
                </Frame>

                <Button
                    x:Name="RandomButton"
                    Text="สุ่มดวง"
                    FontSize="24"
                    FontAttributes="Bold"
                    SemanticProperties.Hint="สุ่มโชคของคุณ"
                    Clicked="OnRandomFortuneClicked"
                    HorizontalOptions="Center"
                    WidthRequest="150"
                    HeightRequest="75"
                    BackgroundColor="#391d71"
                    TextColor="White" 
                    CornerRadius="40">
                <Button.Shadow>
                    <Shadow
                        Brush="#fee371"
                        Offset="0,0"
                        Radius="50"
                        Opacity="1" />
                </Button.Shadow>
                </Button>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
